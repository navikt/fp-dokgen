{
  "$id": "svangerskapspenger-opphor",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Dokumentdata for brev Svangerskapspenger Opphør",
  "type": "object",
  "required": [
    "felles",
    "lovhjemmel",
    "erSøkerDød",
    "opphørPerioder"
  ],
  "$defs": {
    "opphørPeriode": {
      "type": "object",
      "required": [
        "årsak"
      ],
      "properties": {
        "årsak": {
          "type": "string"
        },
        "stønadsperiodeFom": {
          "type": "string"
        },
        "stønadsperiodeTom": {
          "type": "string"
        },
        "arbeidsgivere": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "properties": {
    "felles": {
      "$ref": "file:content/templates/schema_felles.json"
    },
    "opphørsdato": {
      "type": "string"
    },
    "erSøkerDød": {
      "type": "boolean"
    },
    "dødsdatoBarn": {
      "type": "boolean"
    },
    "fødselsdato": {
      "type": "string"
    },
    "halvG": {
      "type": "number"
    },
    "lovhjemmel": {
      "type": "string"
    },
    "opphørPerioder": {
      "type": "array",
      "items": { "$ref": "#/$defs/opphørPeriode" }
    },
    "klagefristUker": {
      "type": "number"
    }
  }
}
